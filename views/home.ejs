<% if (!user) { %>
	<p>Welcome! Please <a href="/login">log in</a>.</p>
<% } else { %>
	<p>Hello, <%= user.name %>. View your <a href="/profile">profile</a>.</p>
	<form action="/" method="get">
		<p>Write a post:</p>
		<input type="text" name="post">
		<p>Location</p>
		<input type="text" name="location">
		<input type="submit" name="submit">
	</form>
<% } %>
